datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String   @id @default(cuid())
  name     String
  email    String   @unique
  password String
  reservations Reservation[]
}

model Reservation {
  id        String   @id @default(cuid())
  user_id   String
  user      User     @relation(fields: [user_id], references: [id])
  start_time DateTime
  end_time   DateTime
}